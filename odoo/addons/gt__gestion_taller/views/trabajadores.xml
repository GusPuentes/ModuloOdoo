<odoo>
  <data>
          <!--List view -->
    <record model="ir.ui.view" id="gt__gestion_taller.trabajadores_list" >
      <field name="name">Trabajadores</field>
      <field name="model">gt__gestion_taller.trabajadores</field>
      <field name="arch" type="xml">
        <tree>
          <field name = "name"/>
          <field name = "apellido"/>
          <field name="puesto"/>
          <field name="precio_hora" />
        </tree>
      </field>  
    </record>

          <!--Form view -->

    <record model="ir.ui.view" id="gt__gestion_taller.trabajadores_form">
      <field name="name">Trabajadores</field>
      <field name="model">gt__gestion_taller.trabajadores</field>
      <field name="arch" type="xml">
        <form>
          <group col='6' colspan='2'>
            <group ></group>
            <group >
              <field name="name"/>
              <field name="apellido"/>
            </group>
            <group >
              <field name="precio_hora" />
              <field name="puesto"/>
            </group>
          </group>
        </form>
      </field>
    </record>      
  </data>
</odoo>