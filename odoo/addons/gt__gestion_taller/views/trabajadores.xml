<odoo>
  <data>
          <!--List view -->
    <record model="ir.ui.view" id="gt__gestion_taller.trabajadores_list" >
      <field name="name">Trabajadores</field>
      <field name="model">gt__gestion_taller.trabajadores</field>
      <field name="arch" type="xml">
        <tree>
          <field name = "name"/>
          <field name = "apellido"/>
          <field name="puesto"/>
        </tree>
      </field>  
    </record>

          <!--Form view -->

    <record model="ir.ui.view" id="gt__gestion_taller.trabajadores_form">
      <field name="name">Trabajadores</field>
      <field name="model">gt__gestion_taller.trabajadores</field>
      <field name="arch" type="xml">
        <form>
          <group col='4' colspan='1'>
            <group ></group>
            <group >
              <field name="name"/>
            </group>
            <group></group>
            <group >
              <field name="apellido"/>
              <field name="puesto"/>
            </group>
          </group>
        </form>
      </field>
    </record>      
  </data>
</odoo>